<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragment.authentication.ForgotPasswordFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="@dimen/hundread_dp"
            android:fontFamily="@font/circularstd_book"
            android:text="Type a new password"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/ten_sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/passWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPassword"
            android:layout_marginLeft="@dimen/thirty_dp"
            android:layout_marginTop="@dimen/forty_dp"
            android:layout_marginRight="@dimen/thirty_dp">


            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/circularstd_book"
                android:hint="New Password"
                android:inputType="textPassword"
                android:textSize="@dimen/ten_sp" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/confirmPassWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passWrapper"
            android:layout_marginLeft="@dimen/thirty_dp"
            android:layout_marginTop="@dimen/ten_sp"
            android:layout_marginRight="@dimen/thirty_dp">


            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/circularstd_book"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textSize="@dimen/ten_sp" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.button.MaterialButton
            android:id="@+id/bDone"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmPassWrapper"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/sixty_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginRight="@dimen/sixty_dp"
            android:background="@color/primaryColor"
            android:fontFamily="@font/circularstd_book"
            android:text="Done"
            android:textAllCaps="false"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/ten_sp" />


        <android.support.design.button.MaterialButton
            android:id="@+id/bCancel"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bDone"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/sixty_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:layout_marginRight="@dimen/sixty_dp"

            android:fontFamily="@font/circularstd_book"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/ten_sp" />

    </RelativeLayout>
</ScrollView>