<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragment.authentication.ForgotPasswordFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/hundread_dp"
            android:fontFamily="@font/circularstd_book"
            android:text="Forgot your password?"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/ten_sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/emailWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPassword"
            android:layout_marginLeft="@dimen/thirty_dp"
            android:layout_marginTop="@dimen/forty_dp"
            android:layout_marginRight="@dimen/thirty_dp">


            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/circularstd_book"
                android:hint="Email or Phone"
                android:inputType="textPassword"
                android:textSize="@dimen/fifteen_sp" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.button.MaterialButton
            android:id="@+id/bSendCode"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailWrapper"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:background="@color/primaryColor"
            android:fontFamily="@font/circularstd_book"
            android:text="Send code"
            android:textAllCaps="false"
            android:textColor="@color/secondaryTextColor"
            android:textSize="10sp" />


        <android.support.design.button.MaterialButton
            android:id="@+id/bSignIn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bSendCode"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            android:fontFamily="@font/circularstd_book"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/primaryTextColor"
            android:textSize="10sp" />

    </RelativeLayout>
</ScrollView>